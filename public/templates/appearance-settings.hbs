<form>
  <section class="content">
    <div class="form-group">
      <label>{{localize "CEL.settings.confetti-color-base.Name"}}</label>
      <div class="form-fields">
        {{ colorPicker name="confetti-color-base" value=confetti-color-base }}
      </div>
      <p class="notes">{{localize "CEL.settings.confetti-color-base.Hint"}}</p>
    </div>

    <div class="form-group">
      <label>{{localize "CEL.settings.confetti-style-choice.Name"}}</label>
      <div class="form-fields">
        <select name="confetti-style-choice">
          {{selectOptions style_choices selected=confetti-style-choice localize=true}}
        </select>
      </div>
      <p class="notes">{{localize "CEL.settings.confetti-style-choice.Hint"}}</p>
    </div>

    <div class="form-group">
      <label>{{localize "CEL.settings.confetti-glitter-deviation.Name"}}</label>
      <div class="form-fields">
        {{rangePicker name="confetti-glitter-deviation" value=confetti-glitter-deviation min=0 max=255 step=1}}
      </div>
      <p class="notes">{{localize "CEL.settings.confetti-glitter-deviation.Hint"}}</p>
    </div>

    <div class="form-group">
      <label>{{localize "CEL.settings.confetti-scale.Name"}}</label>
      <div class="form-fields">
        {{rangePicker name="confetti-scale" value=confetti-scale min=0.3 max=2 step=0.1}}
      </div>
      <p class="notes">{{localize "CEL.settings.confetti-glitter-deviation.Hint"}}</p>
    </div>
  </section>

  <footer class="sheet-footer flexrow">
    <button>{{localize "CEL.test"}}</button>
    <button type="submit"><i class="far fa-save"></i>{{localize "CEL.apply"}}</button>
  </footer>
</form>
